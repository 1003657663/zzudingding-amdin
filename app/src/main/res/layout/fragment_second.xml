<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_margin="5dp"
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#999999"
            android:background="@drawable/search_f2" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_marginBottom="1px">
                <com.codeevery.myElement.TextImgButton
                    android:id="@+id/second_button1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginRight="1px"/>
                <com.codeevery.myElement.TextImgButton
                    android:id="@+id/second_button2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginRight="1px"/>
                <com.codeevery.myElement.TextImgButton
                    android:id="@+id/second_button3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp" />
            </TableRow>
            <TableRow>
                <com.codeevery.myElement.TextImgButton
                    android:id="@+id/second_button4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginRight="1px"/>
                <com.codeevery.myElement.TextImgButton
                    android:id="@+id/second_button5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp"
                    android:layout_marginRight="1px"/>
                <com.codeevery.myElement.TextImgButton
                    android:id="@+id/second_button6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="120dp" />
            </TableRow>
        </TableLayout>
        <!--这里是信息展示的部分-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="@color/secondary_text"
            android:text="置顶消息"/>
        <LinearLayout
            android:id="@+id/fragment2_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>