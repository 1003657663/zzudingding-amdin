<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ab_bottom_solid_myactionbar">
        <ImageButton
            android:id="@+id/get_lost_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_to"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/transparent"/>
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <Button
                android:id="@+id/get_lost_get"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="招领"
                android:textColor="@color/white"
                android:background="@drawable/left_radius_border_white"/>
            <Button
                android:id="@+id/get_lost_lost"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:background="@drawable/right_radius_border_white"
                android:text="报失"/>
        </LinearLayout>
    </RelativeLayout>
    <com.codeevery.myElement.LoadMoreListView
        android:id="@+id/get_lost_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.codeevery.myElement.LoadMoreListView>
    <Button
        android:id="@+id/get_lost_iwill"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@drawable/primary_button"/>
</LinearLayout><!-- From: file:/Volumes/MACWIN/zzudingding/app/src/main/res/layout/get_lost_thing.xml -->