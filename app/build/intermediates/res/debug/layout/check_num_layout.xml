<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faffffff">

    <TextView
        android:id="@+id/check_num_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:text="请输入验证码:" />
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/check_num_dialog"
        android:id="@+id/get_will_checkNum"
        android:layout_width="80dp"
        android:layout_height="30dp" />

    <EditText
        android:layout_below="@+id/get_will_checkNum"
        android:id="@+id/get_will_checkText"
        android:paddingTop="10dp"
        android:ems="4"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp" />
    <Button
        android:id="@+id/check_num_submit"
        android:layout_below="@+id/get_will_checkText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/primary_button"
        android:layout_marginTop="10dp"
        android:text="提交"/>
</RelativeLayout><!-- From: file:/Volumes/MACWIN/zzudingding/app/src/main/res/layout/check_num_layout.xml -->